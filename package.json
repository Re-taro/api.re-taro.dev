{
  "name": "api.re-taro.dev",
  "version": "1.0.0",
  "description": "My personal API server",
  "keywords": [
    "nest",
    "typescript",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/re-taro/api.re-taro.dev"
  },
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "scripts": {
    "gen:module": "nest generate module",
    "gen:controller": "nest generate controller",
    "gen:service": "nest generate service",
    "gen:resolver": "nest generate resolver",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "fmt": "prettier -w **/**/*.ts",
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "apollo:rover": "rover graph publish re-taro@current --schema ./graphql/schema.graphql"
  },
  "dependencies": {
    "@nestjs/apollo": "10.1.4",
    "@nestjs/common": "9.1.6",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.1.6",
    "@nestjs/graphql": "10.1.5",
    "@nestjs/platform-express": "9.1.6",
    "apollo-server-core": "3.10.3",
    "apollo-server-express": "3.10.3",
    "axios": "0.27.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "express": "4.18.2",
    "graphql": "16.6.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.7",
    "ts-pattern": "4.0.5",
    "yaml": "2.1.3"
  },
  "devDependencies": {
    "@apollo/rover": "0.9.1",
    "@jest/types": "29.2.1",
    "@nestjs/cli": "9.1.5",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.6",
    "@types/jest": "29.2.0",
    "@types/node": "16.18.3",
    "@types/supertest": "2.0.12",
    "apollo-server-types": "3.6.3",
    "eslint": "8.26.0",
    "eslint-config-re-taro": "1.2.0",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4",
    "webpack": "5.74.0"
  }
}
