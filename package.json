{
  "name": "api.re-taro.dev",
  "version": "1.0.0",
  "description": "My personal API server",
  "keywords": [
    "nest",
    "typescript",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/re-taro/api.re-taro.dev"
  },
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "fmt": "prettier -w **/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "8.4.5",
    "@nestjs/core": "8.4.5",
    "@nestjs/platform-fastify": "8.4.5",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@jest/types": "28.1.0",
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.5",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.36",
    "@types/supertest": "2.0.12",
    "eslint": "8.16.0",
    "eslint-config-re-taro": "1.1.3",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.3",
    "ts-jest": "28.0.3",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.2",
    "webpack": "5.72.1"
  }
}
