{
  "name": "api.re-taro.dev",
  "version": "1.0.0",
  "description": "My personal API server",
  "keywords": [
    "nest",
    "typescript",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/re-taro/api.re-taro.dev"
  },
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "scripts": {
    "gen:module": "nest generate module",
    "gen:controller": "nest generate controller",
    "gen:service": "nest generate service",
    "gen:resolver": "nest generate resolver",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "fmt": "prettier -w **/**/*.ts",
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "apollo:rover": "rover graph publish re-taro@current --schema ./graphql/schema.graphql"
  },
  "dependencies": {
    "@nestjs/apollo": "10.0.16",
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "8.4.7",
    "@nestjs/graphql": "10.0.16",
    "@nestjs/platform-express": "^8.4.7",
    "apollo-server-core": "^3.10.0",
    "apollo-server-express": "^3.9.0",
    "axios": "0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "ts-pattern": "^4.0.5",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@apollo/rover": "^0.8.1",
    "@jest/types": "28.1.1",
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/jest": "28.1.2",
    "@types/node": "16.11.41",
    "@types/supertest": "2.0.12",
    "apollo-server-types": "^3.6.2",
    "eslint": "8.18.0",
    "eslint-config-re-taro": "1.1.3",
    "jest": "28.1.1",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.3",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4",
    "webpack": "5.73.0"
  }
}
