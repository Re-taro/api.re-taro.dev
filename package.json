{
  "name": "api.re-taro.dev",
  "version": "1.0.0",
  "description": "My personal API server",
  "keywords": [
    "nest",
    "typescript",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/re-taro/api.re-taro.dev"
  },
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "fmt": "prettier -w **/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "10.0.16",
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "8.4.7",
    "@nestjs/graphql": "10.0.16",
    "@nestjs/platform-fastify": "8.4.7",
    "apollo-server-fastify": "3.9.0",
    "axios": "0.27.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "fastify": "3.29.1",
    "graphql": "16.5.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@jest/types": "28.1.1",
    "@nestjs/cli": "8.2.8",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/jest": "28.1.4",
    "@types/node": "16.11.42",
    "@types/supertest": "2.0.12",
    "apollo-server-express": "3.9.0",
    "eslint": "8.19.0",
    "eslint-config-re-taro": "1.1.3",
    "express": "4.18.1",
    "jest": "28.1.2",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.1",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4",
    "webpack": "5.73.0"
  }
}
